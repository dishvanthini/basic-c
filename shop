#include <stdio.h>

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int x, y,extra,extraprice,total;
        scanf("%d %d", &x, &y);
        if (x<y)
            
            {
            extra=y-x;
            extraprice=extra*2;
            total=x+extraprice;
            printf("%d\n",total);
            }
        else
        printf("%d\n",y);
        
        
    }
return 0 ;
}
